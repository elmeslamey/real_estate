<odoo>
    <record id="building_view_list" model="ir.ui.view">
        <field name="name">building list</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <list class="header_custom">
                <field name="name"/>
                <field name="no"/>
                <field name="code"/>
                <field name="description"/>
                <field name="active"/>

            </list>
        </field>
    </record>


    <record id="building_view_form" model="ir.ui.view">
        <field name="name">building form</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>

                    </header>
                    <group>
                        <group string="General.info">
                            <field name="name"/>
                            <field name="no"/>

                        </group>
                        <group string="additional.info">
                            <field name="code"/>
                            <field name="active"/>

                        </group>

                        <group>
                            <field name="description" />
                        </group>

                    </group>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>

            </form>
        </field>
    </record>


    <record id="building_action" model="ir.actions.act_window">
        <field name="name">Building</field>
        <field name="res_model">building</field>

    </record>

        <record id="building_view_search" model="ir.ui.view">
            <field name="name">building search</field>
            <field name="model">building</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="no"/>
                    <field name="code"/>

                </search>
            </field>
        </record>


    <menuitem
            id="building_ment_item"
            name="Buildings"
            parent="properties_menu"
            action="building_action"
    />
</odoo>
